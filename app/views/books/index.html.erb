<header>
    <h1>Books</h1>
</header>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
            </tr>
        </thead>
            
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="new">
    <div class="new-title">
        <h2>New book</h2>
    </div>
    
    <div class="error">
        <% if @book.errors.any? %>
            <%= @book.errors.count %> errors prohibited this book from being saved:
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
    <div class="post">
        <%= form_with model: @book do |f| %>
            <p class="book-title">Title</p>
            <div class="book-area">
                <%= f.text_field :title %>
            </div>
            
            <p class="book-title">Body</p>
            <div class="book-area">
                <%= f.text_area :body %>
            </div>
            
            <div class="btn">
                <%= f.submit "Create Book" %>
            </div>
        <% end %>
    </div>